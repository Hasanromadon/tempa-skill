{
  "name": "tempaskill",
  "version": "1.0.0",
  "description": "TempaSKill - Platform pembelajaran berbasis teks dengan sesi langsung",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"BE,FE\" -c \"blue,magenta\" \"cd tempaskill-be && go run cmd/api/main.go\" \"cd tempaskill-fe && yarn dev\"",
    "dev:backend": "cd tempaskill-be && go run cmd/api/main.go",
    "dev:frontend": "cd tempaskill-fe && yarn dev",
    "build:frontend": "cd tempaskill-fe && yarn build",
    "start:frontend": "cd tempaskill-fe && yarn start",
    "install:frontend": "cd tempaskill-fe && yarn install",
    "test:backend": "cd tempaskill-be && go test ./...",
    "test:frontend": "cd tempaskill-fe && yarn test",
    "lint:frontend": "cd tempaskill-fe && yarn lint",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:e2e:report": "playwright show-report"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Hasanromadon/tempa-skill.git"
  },
  "keywords": [
    "e-learning",
    "golang",
    "nextjs",
    "education",
    "indonesia"
  ],
  "author": "Hasanromadon",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react-dropzone": "^14.3.8"
  }
}
