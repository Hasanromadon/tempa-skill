# Server Configuration
PORT=8080
APP_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=tempaskill

# JWT Configuration
# CRITICAL: Generate a strong random secret (minimum 32 characters)
# Generate with: openssl rand -base64 64
# DO NOT use a weak or predictable secret in production!
JWT_SECRET=
JWT_EXPIRATION_HOURS=24

# Firebase Configuration
# Path to Firebase service account JSON file (get from Firebase Console)
# DO NOT commit this file to git! It contains sensitive credentials.
FIREBASE_SERVICE_ACCOUNT=your-project-firebase-adminsdk-xxxxx.json
# Firebase Storage bucket name (format: your-project-id.firebasestorage.app)
FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# Midtrans Payment Gateway Configuration
# Get your keys from: https://dashboard.midtrans.com/
# CRITICAL: NEVER commit actual API keys to git!
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_BASE_URL=https://api.sandbox.midtrans.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000
