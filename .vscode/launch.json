{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (Go)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/tempaskill-be/cmd/api",
      "cwd": "${workspaceFolder}/tempaskill-be",
      "envFile": "${workspaceFolder}/tempaskill-be/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Frontend (Next.js)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"],
      "cwd": "${workspaceFolder}/tempaskill-fe",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "E2E Tests (Playwright)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test:e2e:headed"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Backend Tests (Go)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/tempaskill-be",
      "cwd": "${workspaceFolder}/tempaskill-be",
      "envFile": "${workspaceFolder}/tempaskill-be/.env"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack",
      "configurations": ["Backend (Go)", "Frontend (Next.js)"],
      "stopAll": true
    }
  ]
}
